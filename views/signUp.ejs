<%- include('templates/header') %>
<h1 style="display: flex;">Signup</h1>
<div class="container" style="display: flex;">
  <form action="/signupSubmit" method="post">
    <label for="inputPassword5" class="form-label"><b>Name</b></label>
    <input class="form-control form-control-lg" type="text" name="name" placeholder="Enter Name" aria-label=".form-control-lg example">
    
    <label for="inputPassword5" class="form-label"><b>Password</b></label>
    <input type="password" id="inputPassword5" class="form-control" name="password" aria-labelledby="passwordHelpBlock">
    <div id="passwordHelpBlock" class="form-text">
      Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label"><b>Email address</b></label>
      <input type="email" class="form-control" name="email" id="exampleFormControlInput1" placeholder="name@example.com">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<br>
<div class="container" style="display: block;">
  <p>or</p>
  <a href="/login" class="btn btn-primary btn-sm">Login</a>
</div>
<%- include('templates/footer') %>
